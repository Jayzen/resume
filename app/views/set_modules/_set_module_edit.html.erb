<div class="col-md-10">
  <div class="card">
    <div class="card-header text-secondary text-center">
      <%= t('edit_module') %>
    </div>
    <div class="card-body">
      <%= form_for(:set_module, url: set_module_path(current_user), method: :put ) do |f| %>
        <div class="form-group row">
          <div class="col-sm-10">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="set_module[has_social]"  value=true  <%= current_user.has_social == true ? "checked" : ""%>>
              <label class="form-check-label text-secondary">
                <%= t('social_information') %>
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="set_module[has_project]"  value=true <%= current_user.has_project == true ? "checked" : ""%>>
              <label class="form-check-label text-secondary">
                <%= t('project') %>
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="set_module[has_education]"  value=true <%= current_user.has_education == true ? "checked" : ""%>>
              <label class="form-check-label text-secondary">
                <%= t('education') %>
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="set_module[has_skill]"  value=true <%= current_user.has_skill == true ? "checked" : ""%>>
              <label class="form-check-label text-secondary">
                <%= t('skill') %>
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="set_module[has_experience]"  value=true <%= current_user.has_experience == true ? "checked" : ""%>>
              <label class="form-check-label text-secondary">
                <%= t('experience') %>
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="set_module[has_paper]"  value=true <%= current_user.has_paper == true ? "checked" : ""%>>
              <label class="form-check-label text-secondary">
                <%= t('paper') %>
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="set_module[has_pdf_resume]"  value=true <%= current_user.has_pdf_resume == true ? "checked" : ""%>>
              <label class="form-check-label text-secondary">
                <%= t('resume_information') %>
              </label>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
            <%= f.submit t('set_module'), class: "btn btn-primary btn-sm"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
