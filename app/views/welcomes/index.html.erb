<% provide(:title, t('home')) %>

<nav class="navbar navbar-expand-sm navbar-light bg-dark">
  <div class="container">
    <strong><%= link_to t('resume'), root_path, class: "navbar-brand text-secondary text-light" %></strong>
    <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav"><span class="navbar-toggler-icon"></span></button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav"><li class="nav-item"></li></ul>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><%= link_to "中文", set_zh_path, class: "text-secondary nav-link" %></li>
        <li class="nav-item"><%= link_to "English", set_en_path, class: "text-secondary nav-link" %></li> 
        <% if logged_in? %>
          <li class="nav-item"></li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
              <% if current_user.avatar.to_s.size == 0 %>
                <img src="https://test.zhengjiajun.com/uploads/wechat/name/29/middle_avatar.png" class="rounded-circle"  width="25" height="25"/>
              <% else %>
                <%= image_tag current_user.avatar.large.url, size: "25x25", class: "rounded-circle" %>
              <% end %>
            </a>
            <div class="dropdown-menu dropdown-menu-right">
              <%= link_to t('basic_settings'), edit_user_path(current_user), class: "dropdown-item text-secondary" %>
              <%= link_to t('resume_settings'), resume_information_path, class: "dropdown-item text-secondary" %>
              <%= link_to t('online_resume_information'), online_path(current_user.name_en), class: "dropdown-item text-secondary" %>
              <div class="dropdown-divider"></div>
              <%= link_to t('logout'), logout_path, method: "delete", class: "dropdown-item text-secondary" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item"><%= link_to t('login'), login_path, class: "nav-link text-light" %></li>
        <% end -%>
      </ul>
    </div>
  </div>
</nav>


<main role="main">
  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading text-dark"><%= t('app_description') %></h1>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="card box-shadow">
            <div class="card-header">
              <p class="card-text text-secondary"><%= t('github_login') %></p>
            </div>
             <i class="fa fa-github fa-5x"></i>
          </div>
        </div>

        <div class="col-md-3">
          <div class="card box-shadow">
            <div class="card-header">
              <p class="card-text text-secondary"><%= t('support_en_and_zh') %></p>
            </div>
            <i class="fa fa-language fa-5x"></i>
          </div>
        </div>

        <div class="col-md-3">
          <div class="card box-shadow">
            <div class="card-header">
              <p class="card-text text-secondary"><%= t('support_set_template') %></p>
            </div>
            <i class="fa fa-check fa-5x"></i>
          </div>
        </div>

        <div class="col-md-3">
          <div class="card box-shadow">
            <div class="card-header">
              <p class="card-text text-secondary"><%= t('support_online_resume') %></p>
            </div>
            <i class="fa fa-cloud fa-5x"></i>
          </div>
        </div>
        </div>
        </div>
      </div>

    </main>

    <footer class="text-muted">
      <div class="container">
        <p><small><u><%= t('footer') %></u></small></p>
      </div>
    </footer>
