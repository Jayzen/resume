<div class='col-md-2'>
    <div class="card">
      <div class="card-header text-secondary text-center">
        <%= t('basic_settings') %>
      </div>
      <div class="card-body d-flex flex-column row-hl">
        <a href="<%= edit_user_path(current_user) %>">
          <button type="button" class="btn <%= controller_name == 'users' ? 'btn-primary' : 'btn-outline-secondary' %> btn-block">
            <i class="fa fa-user fa-fw"></i> <%= t('basic_information') %>
          </button>
        </a>
        <a href="<%= new_portrait_path %>">
          <button type="button" class="btn <%= controller_name == 'portraits' ? 'btn-primary' : 'btn-outline-secondary' %> btn-block mt-2">
            <i class="fa fa-file-image-o fa-fw"></i> <%= t('portrait_information') %>
          </button>
        </a>
        <% unless current_user.provider %>
          <a href="<%= edit_password_alter_path(current_user) %>">
            <button type="button" class="btn <%= controller_name == 'password_alters' ? 'btn-primary' : 'btn-outline-secondary' %> btn-block mt-2">
              <i class="fa fa-key fa-fw"></i> <%= t('password_information') %>
            </button>
          </a>
        <% end %>
        <a href="<%= edit_set_module_path(current_user) %>">
          <button type="button" class="btn <%= controller_name == 'set_modules' ? 'btn-primary' : 'btn-outline-secondary' %> btn-block mt-2">
            <i class="fa fa-check fa-fw"></i> <%= t('set_module') %>
          </button>
        </a>
        <a href="<%= edit_set_template_path(current_user) %>">
          <button type="button" class="btn <%= controller_name == 'set_templates' ? 'btn-primary' : 'btn-outline-secondary' %> btn-block mt-2">
            <i class="fa fa-internet-explorer fa-fw"></i> <%= t('template_information') %>
          </button>
        </a>
        <a href="<%= pdf_lists_path %>">
          <button type="button" class="btn <%= controller_name == 'pdf_onlines' ? 'btn-primary' : 'btn-outline-secondary' %> btn-block mt-2">
            <i class="fa fa-file-pdf-o fa-fw"></i> <%= t('pdf_settings') %>
          </button>
        </a>
      </div>
    </div>
</div>
