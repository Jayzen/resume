<div class="col-md-10">
    <div class="card">
      <div class="card-header text-secondary text-center">
        <%= t('paper_lists')%> | <%= @paper.title %>
      </div>
      <div class="card-body">
        <div class="form-group mb-0">
          <label class="col-sm-12 col-form-label text-secondary"><%= t('language') %>: <%= @paper.language == "zh" ? t('chinese') : t('english') %></label>
        </div>
        <div class="form-group mb-0">
          <label class="col-sm-12 col-form-label text-secondary"><%= t('paper_time') %>: <%= @paper.time %></label>
        </div> 
        <div class="form-group mb-0">
          <label class="col-sm-12 col-form-label text-secondary"><%= t('paper_title') %>: <%= @paper.title %></label>
        </div>
        <div class="form-group mb-0">
          <label class="col-sm-12 col-form-label text-secondary"><%= t('paper_description') %>: <%= sanitize@paper.description %></label>
        </div>
        <div class="form-group mb-0">
          <label class="col-sm-12 col-form-label text-secondary"><%= t('author_ranking') %>: <%= @paper.author_ranking %></label>
        </div>
        <div class="form-group mb-0">
          <label class="col-sm-12 col-form-label text-secondary"><%= t('paper_level') %>: <%= @paper.paper_level %></label>
        </div> 
        <div class="form-group mb-0">
          <label class="col-sm-12 col-form-label text-secondary"><%= t('weight') %>: <%= @paper.weight %></label>
        </div>
        <div class="form-group mb-0">
          <label class="col-sm-12 col-form-label text-secondary"><%= t('status') %>: <%= @paper.status == true ? t('published') : t('unpublished') %></label>
        </div> 
        <div class="form-group mb-0">
          <label class="col-sm-12 col-form-label"><%= link_to t('paper_lists'), papers_path, class: "btn btn-primary btn-sm" %></label>
        </div>
      </div>
    </div>
</div>
