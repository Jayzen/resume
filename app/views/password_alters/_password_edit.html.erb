<div class="col-md-10">
  <div class="card">
    <div class="card-header text-secondary text-center">
      <%= t('alter_password') %>
    </div>
    <div class="card-body">
      <%= render 'shared/errors' %>
      <%= form_for(:password_alter, url: password_alter_path(current_user), method: :put ) do |f| %>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary"><%= t('old_password') %></label>
          <div class="col-sm-10">
            <%= f.password_field :old_password, class: "form-control", autofocus: true %>
          </div>
        </div> 
        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary"><%= t('new_password') %></label>
          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
   
        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary"><%= t('password_confirmation') %></label>
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label"></label>
          <div class="col-sm-10">
            <%= f.submit t('alter_password'), class: "btn btn-primary btn-sm"%>
          </div> 
        </div>
      <% end %>
    </div>
  </div>
</div>
