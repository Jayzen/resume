<div class="col-md-10">
  <div class="card">
    <div class="card-header text-secondary text-center">
      设置模板
    </div>
    <div class="card-body">
      <%= form_for(:set_template, url: set_template_path(current_user), method: :put ) do |f| %>
        <div class="form-group row">
          <div class="col-sm-10">
            <div class="form-check">
              <%= f.radio_button :template, 1, class: "form-check-input", checked: "checked" %>
              <label class="form-check-label text-secondary">
                模板1
              </label>
            </div>
            <div class="form-check">
              <%= f.radio_button :template, 2, class: "form-check-input" %>
              <label class="form-check-label text-secondary">
                模板2
              </label>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
            <%= f.submit "设置模板", class: "btn btn-primary btn-sm"%>
          </div> 
        </div>
      <% end %>
    </div>
  </div>
</div>
