<div class="col-md-10">
  <div class="card">
    <div class="card-header text-secondary text-center">
      <%= t('set_template') %>
    </div>
    <div class="col-md-8 m-auto"> 
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag "carousel_one.png", class: "d-block w-100" %>
          <div class="carousel-caption d-none d-md-block">
            <h5 class="text-danger"><%= t('template_one') %></h5>
          </div>
        </div>
        <div class="carousel-item">
          <%= image_tag "carousel_two.png", class: "d-block w-100" %>
          <div class="carousel-caption d-none d-md-block">
            <h5 class="text-danger"><%= t('template_two') %></h5>
          </div>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    </div>


    <div class="card-body">
      <%= form_for(:set_template, url: set_template_path(current_user), method: :put ) do |f| %>
        <div class="form-group row">
          <div class="col-sm-10">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="set_template[template]"  value=1  <%= current_user.template == 1 ? "checked" : ""%>>
              <label class="form-check-label text-secondary">
                <%= t('template_one') %>
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="set_template[template]"  value=2 <%= current_user.template == 2 ? "checked" : ""%>>
              <label class="form-check-label text-secondary">
                <%= t('template_two') %>
              </label>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
            <%= f.submit t('set_template'), class: "btn btn-primary btn-sm"%>
          </div> 
        </div>
      <% end %>
    </div>
  </div>
</div>
